<section id="testimonials" class="content-section">
<div id="testimonials-title" style="font-family: 'Helvetica Neue', 'Roboto Mono', 'Poppins', sans-serif; font-size: 2.9em; font-weight: bold;">
    Testimonials
  </div>
    <div id="carousel-wrapper">
      <div id="menu">
          <div id="current-option">
            <span id="current-option-text1" data-previous-text="" data-next-text=""></span>
            <span id="current-option-text2" data-previous-text="" data-next-text=""></span>
          </div>
          <button id="previous-option"></button>
          <button id="next-option"></button>
      </div>
      <div id="image"></div>
    </div>
    <script>
      const text1_options = [
      "Definitely one of the photographers in the world",
      "Took the pictures of my wedding, I think",
      "Our wedding has pictures of it now, awesome",
      "I'm not sure if I'm married, but I have pictures of it"
    ];
    const text2_options = [
      "Zahia + Hector",
      "Diana Alex",
      "Carla + Eric",
      "Abby + Ber"
    ];
    const color_options = ["#e6c7c7",  "#bc9c7c", "#5c5c4c","#543c3b"];
    const text_color_options = ["#5c5c4c", "#543c3b", "#bc9c7c", "#e6c7c7"];
    const title_color_options = ["#5c5c4c", "#543c3b", "#bc9c7c", "#543c3b"]

    const image_options = [
      "https://res.cloudinary.com/dubrm4blh/image/upload/v1694194488/AdeleWedding/fotos/awp8_wboo8c.jpg",
      "https://res.cloudinary.com/dubrm4blh/image/upload/v1694194484/AdeleWedding/fotos/awp11_rrm8ln.jpg",
      "https://res.cloudinary.com/dubrm4blh/image/upload/v1694194485/AdeleWedding/fotos/awp1_imahdc.jpg",
      "https://res.cloudinary.com/dubrm4blh/image/upload/v1694194487/AdeleWedding/fotos/awp13_pebw3v.jpg"
    ];
    var i = 0;
    const currentOptionText1 = document.getElementById("current-option-text1");
    const currentOptionText2 = document.getElementById("current-option-text2");
    const currentOptionImage = document.getElementById("image");
    const carousel = document.getElementById("carousel-wrapper");
    const mainMenu = document.getElementById("menu");
    const optionPrevious = document.getElementById("previous-option");
    const optionNext = document.getElementById("next-option");
    const testimonialsTitle = document.getElementById("testimonials-title");



    currentOptionText1.innerText = text1_options[i];
    currentOptionText2.innerText = text2_options[i];
    currentOptionImage.style.backgroundImage = "url(" + image_options[i] + ")";
    mainMenu.style.background = color_options[i];
    currentOptionText1.style.color = text_color_options[i];
    currentOptionText2.style.color = text_color_options[i];
    testimonialsTitle.style.color = title_color_options[i];



    optionNext.onclick = function () {
      i = i + 1;
      i = i % text1_options.length;
      currentOptionText1.dataset.nextText = text1_options[i];

      currentOptionText2.dataset.nextText = text2_options[i];

      mainMenu.style.background = color_options[i];

      currentOptionText1.style.color = text_color_options[i];

      currentOptionText2.style.color = text_color_options[i];

      optionNext.style.backgroundColor = text_color_options[i];

      optionPrevious.style.backgroundColor = text_color_options[i];

      testimonialsTitle.style.color = title_color_options[i];


      carousel.classList.add("anim-next");

      setTimeout(() => {
        currentOptionImage.style.backgroundImage = "url(" + image_options[i] + ")";
      }, 455);

      setTimeout(() => {
        currentOptionText1.innerText = text1_options[i];
        currentOptionText2.innerText = text2_options[i];
        carousel.classList.remove("anim-next");
      }, 650);
    };

    optionPrevious.onclick = function () {
      if (i === 0) {
        i = text1_options.length;
      }
      i = i - 1;
      currentOptionText1.dataset.previousText = text1_options[i];

      currentOptionText2.dataset.previousText = text2_options[i];

      mainMenu.style.background = color_options[i];

      currentOptionText1.style.color = text_color_options[i];

      currentOptionText2.style.color = text_color_options[i];

      optionNext.style.backgroundColor = text_color_options[i];

      optionPrevious.style.backgroundColor = text_color_options[i];

      testimonialsTitle.style.color = title_color_options[i];

      carousel.classList.add("anim-previous");

      setTimeout(() => {
        currentOptionImage.style.backgroundImage = "url(" + image_options[i] + ")";
      }, 455);

      setTimeout(() => {
        currentOptionText1.innerText = text1_options[i];
        currentOptionText2.innerText = text2_options[i];
        carousel.classList.remove("anim-previous");
      }, 650);
    };
  </script>
</section>



